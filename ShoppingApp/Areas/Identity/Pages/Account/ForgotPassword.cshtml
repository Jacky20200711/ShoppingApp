@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "忘記密碼?";
}

<h1>@ViewData["Title"]</h1>
<h4>輸入您的郵件來取得密碼資訊</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="User" asp-action="SendVerifyEmail">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">輸入您的郵件</label>
                <!-- 指定 name 屬性，讓後端可以抓值 -->
                <input asp-for="Input.Email" class="form-control" name="email"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">寄送驗證信</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
