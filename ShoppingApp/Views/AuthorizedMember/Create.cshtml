@model ShoppingApp.Models.AuthorizedMember

@{
    ViewData["Title"] = "Create";
}

<h1>新增特權用戶</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span class="text-danger">@TempData["Exception"]</span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="InAdminGroup" /> @Html.DisplayNameFor(model => model.InAdminGroup)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="InSellerGroup" /> @Html.DisplayNameFor(model => model.InSellerGroup)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="確認建立" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回列表</a>
</div>

