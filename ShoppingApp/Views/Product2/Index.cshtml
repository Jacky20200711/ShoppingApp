@model IEnumerable<ShoppingApp.Models.Product2>

@{
    ViewData["Title"] = "產品列表";
}

<h1>產品列表</h1>

<p>
    <a asp-action="Create">點此建立產品 (最多6個)</a>&nbsp;
    <span class="text-danger">@TempData["ReachLimit"]</span>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                產品擁有者
            </th>
            <th>
                名稱
            </th>
            <th>
                描述
            </th>
            <th>
                價格
            </th>
            <th>
                庫存
            </th>
            <th>
                上架日期
            </th>
            <th>
                圖片網址
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.SellerId)
        </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SellerEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultImageURL)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.SellerId)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">編輯</a> |
                @*<a asp-action="Details" asp-route-id="@item.Id">詳細</a> |*@
                <a asp-action="Delete" asp-route-id="@item.Id">刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>
